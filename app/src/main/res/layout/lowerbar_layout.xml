<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_gravity="bottom">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/lowerbar_image"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lowerbar_image"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/lowerbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="song" />

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/lowerbar_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="singer" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageButton
                android:layout_toLeftOf="@id/lowerbar_nextbutton"
                android:id="@+id/lowerbar_playbutton"
                android:src="@android:drawable/ic_media_play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|center"/>
            <ImageButton
                android:layout_alignParentRight="true"
                android:id="@+id/lowerbar_nextbutton"
                android:src="@android:drawable/ic_media_next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"/>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
