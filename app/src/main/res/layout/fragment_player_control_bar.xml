<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="bottom"
    tools:context="com.example.dfz.myapplication.PlayerControlBarFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        
        <ImageButton
            android:id="@+id/control_bar_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_pause"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/next_song"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/control_bar_play"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_skip_next"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"/>


        <ImageButton
            android:id="@+id/last_song"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toStartOf="@+id/control_bar_play"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_skip_previous"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/play_mode"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_shuffle"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/more_operation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_more_horiz"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"/>
        
    </RelativeLayout>

</FrameLayout>
